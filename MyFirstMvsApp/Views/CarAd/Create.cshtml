@model MyFirstMvsApp.Models.CarAd.CreateInputModel
@using  MyFirstMvsApp.Models.CarAd
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-controller="CarAd" asp-action="Create" method="post">

    <label asp-for="Car.Brand"></label>
    <input asp-for="Car.Brand" class="form-control" />

    <label asp-for="Car.Model"></label>
    <input asp-for="Car.Model" class="form-control" />
    @*@Html.EnumDropDownListFor(model => model.Countries)*@

    <label asp-for="Type"></label>
    <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList<CarType>()">
    </select>

    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control" placeholder="Enter description..."></textarea>

    <label asp-for="ReleaseDate"></label>
    <input asp-for="ReleaseDate" class="form-control" />

    <label asp-for="Year"></label>
    <input asp-for="Year" class="form-control" />

    <label asp-for="Price"></label>
    <input asp-for="Price" class="form-control" />

    <input type="submit" />
</form>
